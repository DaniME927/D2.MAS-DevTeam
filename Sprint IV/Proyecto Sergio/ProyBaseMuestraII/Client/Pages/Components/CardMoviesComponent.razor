<div class="jumbotron">
    <h6>Pel√≠culas</h6>
    <div class="container-fluid">
        <div class="row mb-3">
            @foreach (var movie in ListMovies)
            {
                <div class="col-md-4">
                    <div class="card flex-md-row mb-4 box-shadow h-md-300">
                        <div class="card-body d-flex flex-column align-items-center">
                            <div class="card">
                                <img src="@movie.Poster" class="card-img-top" alt="..." height="350px" width="200px">
                                <div class="card-body">
                                    <h5 class="card-title">@movie.Name</h5>
                                    <p class="card-text">@movie.Sinopsis</p>
                                </div>
                                <div class="card-footer">
                                    <small class="text-muted">@movie.Premier</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>   
            }
        </div>
    </div>
</div>

@code {

    [Parameter] public List<Movie> ListMovies { get; set; }
    
}