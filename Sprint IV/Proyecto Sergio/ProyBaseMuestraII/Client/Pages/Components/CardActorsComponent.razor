<div class="jumbotron">
    <h6>Películas</h6>
    <div class="container-fluid">
        <div class="row mb-3">
            @foreach (var actor in ListActors)
            {
                <div class="col-md-4">
                    <div class="card flex-md-row mb-4 box-shadow h-md-300">
                        <div class="card-body d-flex flex-column align-items-center">
                            @* Campos a mostrar en cada card de Actores *@
                            <div class="card">
                                <div class="card-body">
                                    <img src="@actor.Photo" alt="@actor.ActorName" width="150px">
                                    <h5 class="card-title">@actor.ActorName</h5>
                                    <p class="card-text">@actor.DocumentType</p>
                                    <p class="card-text">@actor.Document</p>
                                    <p class="card-text">@actor.Gender</p>
                                    <p class="card-text">@actor.Nominations</p>
                                    <p class="card-text">@actor.Biography</p>
                                </div>
                                <div class="card-footer">
                                    <small class="text-muted">@actor.BirthDate</small>
                                </div>
                            </div>
                            @* Finalización de la estrutura del card *@
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {

    [Parameter] public List<Actor> ListActors { get; set; }

}