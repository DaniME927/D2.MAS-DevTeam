@page "/movies"
@inject IServiceMovie movies
@inject StateContainer stateContainer
@implements IDisposable

    <MovieCardComponent ListMovies="Movies = movies.GetMovies().Where(x => x.Name.ToLower().Contains(stateContainer.TextTyped.ToLower())).ToList()" />

@code {

    private List<Movie> Movies { get; set; }

    protected override void OnInitialized()
    {
        stateContainer.OnTextTyped += StateHasChanged;
    }

    public void Dispose()
    {
        stateContainer.TextTyped = string.Empty;
        stateContainer.OnTextTyped -= StateHasChanged;
    }

}
