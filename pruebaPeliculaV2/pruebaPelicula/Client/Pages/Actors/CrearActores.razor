@page "/actors/create"
@inject NavigationManager navigationManager

<ComponentFormularioActor OnValidSubmit="Create" Actor="Actor"></ComponentFormularioActor>

@code {
    private Actor Actor = new Actor();
    void Create()
    {
        Console.WriteLine($"Tipo de documento: {Actor.DocumentType}");
        Console.WriteLine($"Número de documento: {Actor.Document}");
        Console.WriteLine($"Nombre actor: {Actor.ActorName}");
        Console.WriteLine($"Género del actor: {Actor.Gender}");
        navigationManager.NavigateTo("/actors");
    }
}
